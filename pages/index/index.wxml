<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="uploader">
    <view class="uploader-text">
      <text>上传图片</text>
    </view>
    <view class="uploader-container" bindtap="doUpload">
      <text class="uploader-text">点击上传</text>
    </view>
  </view>

  <!-- 云函数 -->
  <view class="uploader">
    <view class="uploader-text">
      <text>云函数</text>
    </view>
    <view class="uploader-container">
      <button class="uploader-button" bindtap="callCloudFunction">调用示例云函数</button>
    </view>
  </view>

  <!-- 云数据库 -->
  <view class="uploader">
    <view class="uploader-text">
      <text>云数据库</text>
    </view>
    <view class="uploader-container">
      <button class="uploader-button" bindtap="onQueryDatabase">示例数据库查询</button>
    </view>
  </view>

</view> 