/**index.wxss**/
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  padding: 40rpx;
}

.userinfo, .uploader {
  margin-top: 40rpx;
  height: auto;
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-nickname {
  margin-top: 20rpx;
  font-size: 38rpx;
}

.userinfo-nickname-wrapper {
  width: 100%;
  text-align: center;
}

.uploader {
  height: auto;
  padding: 0 0 0 0;
}

.uploader-text {
  width: 100%;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #007aff;
  text-align: center;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.uploader-button {
  margin-top: 140rpx;
} 