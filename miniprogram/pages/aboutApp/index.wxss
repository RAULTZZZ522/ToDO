.page {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 20rpx;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.logo {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
}
.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.version {
  font-size: 28rpx;
  color: #999;
  margin-top: 8rpx;
}
.section {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.item:last-child {
  border-bottom: none;
}
.item-text {
  font-size: 30rpx;
  color: #333;
}
.arrow {
  font-size: 30rpx;
  color: #999;
} 