.user-center {
  padding: 40rpx 24rpx;
  min-height: 100vh;
  background-color: #f6f6f6;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 4rpx solid #f0f0f0;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}
.login-btn {
  margin-top: 16rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: #07c160;
  border-radius: 40rpx;
}
.settings {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.setting-text {
  font-size: 32rpx;
  color: #333;
}
.setting-arrow {
  font-size: 32rpx;
  color: #bbb;
}
.logout-btn {
  width: 100%;
  margin-top: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #ff4d4f;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
} 