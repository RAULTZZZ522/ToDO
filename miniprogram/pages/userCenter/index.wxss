page {
  background-color: #f5f7fa;
}

.stats-container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 统计卡片通用样式 */
.stats-card {
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 4rpx solid #f0f0f0;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

/* 设置列表样式 */
.settings {
  border-radius: 8rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-text {
  font-size: 32rpx;
  color: #333;
}

.setting-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 按钮样式 */
.login-btn {
  margin-top: 16rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #f87c7c;
  border-radius: 40rpx;
  padding: 0;
  border: none;
}

/* 重置微信按钮的默认样式 */
button::after {
  border: none;
}

.logout-btn {
  width: 100%;
  margin-top: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #ff4d4f;
  background-color: #fff;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
} 