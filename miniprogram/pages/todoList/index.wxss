.category {
  background: #fff;
  margin: 20rpx 0;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  padding: 24rpx;
}
.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.category-icons {
  display: flex;
  gap: 16rpx;
}
.icon-btn {
  border: none;
  background: none;
  font-size: 32rpx;
}
.task-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  font-size: 32rpx;
}
.start-btn {
  border: 1rpx solid #888;
  border-radius: 8rpx;
  padding: 8rpx 32rpx;
  background: #fff;
  font-size: 28rpx;
} 