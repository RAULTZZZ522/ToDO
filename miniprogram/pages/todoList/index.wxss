/* Container */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 30rpx;
}

/* Header */
.header {
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.sort-controls {
  display: flex;
  gap: 30rpx;
}

.sort-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.sort-btn.active {
  color: #ff6b6b;
  font-weight: 500;
}

.sort-icon {
  margin-left: 8rpx;
}

/* Todo List */
.todo-list {
  padding-bottom: 180rpx; /* Space for the add button */
}

.loading-state,
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

.todo-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
  transition: transform 0.2s;
  display: flex;
  align-items: flex-start;
  position: relative;
}

.todo-card.completed {
  background-color: #f9f9f9;
}

.todo-card:active {
  transform: scale(0.98);
}

.todo-checkbox {
  margin-right: 20rpx;
  padding-top: 4rpx;
}

.todo-content {
  flex: 1;
  width: calc(100% - 100rpx);
}

.todo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.todo-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  min-width: 60%;
}

.todo-title.completed-text {
  text-decoration: line-through;
  color: #999;
}

.todo-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.todo-description.completed-text {
  text-decoration: line-through;
  color: #999;
}

.todo-meta {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.todo-time {
  font-size: 24rpx;
  color: #888;
}

.todo-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.todo-importance {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #888;
}

.importance-dots {
  display: flex;
  margin-left: 10rpx;
}

.importance-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 6rpx;
}

.importance-dot.active {
  background-color: #ff6b6b;
}

.tomato-count {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #a084e8;
  background-color: #f3e8ff;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.tomato-count text {
  margin-left: 6rpx;
}

.todo-actions {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.todo-action {
  padding: 10rpx;
}

/* Add Button */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ff6b6b;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 107, 0.3);
  z-index: 10;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 101;
}

.modal-header {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.modal-body {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 180rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.importance-selector {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.importance-option {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  background-color: #eee;
  color: #666;
  font-size: 32rpx;
}

.importance-option.active {
  background-color: #ff6b6b;
  color: white;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  border-radius: 0;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #ff6b6b;
  color: white;
}

/* 开始番茄钟按钮样式 */
.tomato-start-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #f3e8ff;
  border-radius: 24rpx;
  margin-right: 12rpx;
  color: #7c4dff;
  font-size: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(160, 132, 232, 0.2);
}

.tomato-start-btn text {
  margin-left: 6rpx;
}

.tomato-start-btn:active {
  transform: scale(0.95);
}

/* 删除按钮样式 */
.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #fff0f0;
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 107, 0.2);
}

.delete-btn:active {
  transform: scale(0.95);
}

.tomato-badge {
  display: flex;
  align-items: center;
  background-color: #f3e8ff;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-left: 12rpx;
  border: 1rpx solid #a084e8;
}

.tomato-emoji {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.tomato-count-text {
  font-size: 24rpx;
  color: #7c4dff;
  font-weight: 500;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 在日程卡片中显示类别 */
.todo-category {
  display: inline-block;
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: 12rpx;
}

.todo-badges {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
}

/* 番茄钟计数器样式 */
.tomato-counter {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  display: flex;
  align-items: center;
  background-color: #f3e8ff;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  border: 1rpx solid #a084e8;
  z-index: 5;
}

.tomato-emoji {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.tomato-count-text {
  font-size: 24rpx;
  color: #7c4dff;
  font-weight: 500;
}

.tomato-time-text {
  font-size: 22rpx;
  color: #9575cd;
  margin-left: 6rpx;
  border-left: 1rpx solid #9575cd;
  padding-left: 6rpx;
}

