.aim-list {
  padding: 24rpx;
}
.aim-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  padding: 20rpx;
}
.aim-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 12rpx;
}
.aim-title {
  font-size: 36rpx;
  font-weight: bold;
}
.aim-desc {
  font-size: 28rpx;
  color: #888;
}
.todo-list {
  margin-left: 16rpx;
}
.todo-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
} 