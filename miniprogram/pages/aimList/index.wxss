page {
  background-color: #fffaf5;
}

.aim-container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #7d5a50;
}

.add-btn {
  background: #ff8f66;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 143, 102, 0.2);
}

.aim-list {
  padding: 0 10rpx;
}

.empty-tip {
  text-align: center;
  color: #b5917a;
  margin-top: 100rpx;
}

.empty-todos {
  color: #b5917a;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.aim-item {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 180, 140, 0.08);
  padding: 30rpx;
}

.aim-header {
  margin-bottom: 20rpx;
}

.aim-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.aim-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7d5a50;
}

.aim-category {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  background: #fff0e6;
  color: #ff8f66;
  border-radius: 20rpx;
}

.aim-desc {
  font-size: 28rpx;
  color: #b5917a;
  margin-bottom: 20rpx;
}

.aim-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 28rpx;
  color: #b5917a;
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #7d5a50;
}

.urgent {
  color: #ff8f66;
  font-weight: bold;
}

.progress-section {
  margin: 20rpx 0 30rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #7d5a50;
}

.progress-bar-container {
  height: 20rpx;
  background: #fff0e6;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(to right, #ff8f66, #ffaa85);
  border-radius: 10rpx;
  transition: width 0.3s ease-in-out;
}

.related-todos {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #ffe0cc;
}

.related-title {
  font-size: 28rpx;
  color: #b5917a;
  margin-bottom: 10rpx;
}

.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 1px solid #ffe0cc;
}

.todo-checkbox {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ffe0cc;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
  transition: all 0.2s;
}

.checkbox.checked {
  border-color: #ff8f66;
  background-color: #fff;
  position: relative;
}

.checkbox.checked::before {
  content: '';
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  background-color: #ff8f66;
  border-radius: 50%;
}

.todo-title {
  flex: 1;
  font-size: 28rpx;
  color: #7d5a50;
}

.debug-info {
  background-color: #fff7f0;
  padding: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #b5917a;
}

.debug-info text {
  display: block;
  margin-bottom: 5rpx;
}

.todo-checkbox-container {
  max-height: 400rpx;
  overflow-y: auto;
  border: 1px solid #ffe0cc;
  border-radius: 8rpx;
  margin-top: 10rpx;
  padding: 10rpx;
}

.aim-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 20rpx;
  background: #ff8f66;
  color: white;
}

/* 所有按钮统一使用红色样式 */

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 85%;
  max-height: 85%;
  overflow-y: auto;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #7d5a50;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #b5917a;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.form-input, .form-textarea, .picker {
  width: 100%;
  border: 1rpx solid #ffe0cc;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #7d5a50;
  box-sizing: border-box;
  height: 90rpx;
  display: flex;
  align-items: center;
}

/* 占位符文本样式 */
.input-placeholder {
  color: #b5917a;
  font-size: 30rpx;
  line-height: normal;
}

/* 标题输入框样式增强 */
.form-input[data-field="title"] {
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding-top: 0;
  padding-bottom: 0;
  line-height: 100rpx;
}

/* 数字输入框样式增强 */
.form-input[type="number"] {
  height: 100rpx;
  font-size: 32rpx;
  padding-left: 30rpx;
  line-height: 100rpx;
  padding-top: 0;
  padding-bottom: 0;
}

.form-textarea {
  height: 180rpx;
  font-size: 30rpx;
  padding: 20rpx;
  line-height: 1.5;
  display: block;
}

.picker {
  display: flex;
  align-items: center;
  height: 90rpx;
}

/* 复选框样式改进 */
checkbox-group {
  display: flex;
  flex-direction: column;
  max-height: 320rpx;
  overflow-y: auto;
  border: 1px solid #ffe0cc;
  border-radius: 8rpx;
  padding: 10rpx 0;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  margin-bottom: 5rpx;
  border-bottom: 1px solid #fff0e6;
  position: relative;
  z-index: 1;
}

.checkbox-item:last-child {
  border-bottom: none;
}

.checkbox-item checkbox {
  margin-right: 15rpx;
  transform: scale(1.2); /* 增大复选框大小 */
}

.checkbox-text {
  font-size: 28rpx;
  color: #7d5a50;
  flex: 1;
}

.submit-btn {
  margin-top: 40rpx;
  background: #ff8f66;
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 143, 102, 0.2);
}

/* 自定义复选框样式 */
.custom-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ffe0cc;
  border-radius: 6rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  position: relative;
  z-index: 10;
}

.custom-checkbox.checked {
  border-color: #ff8f66;
  background-color: rgba(255, 143, 102, 0.1);
}

/* 关联日程复选框样式 */
.relate-checkbox-group {
  display: flex;
  flex-direction: column;
  border: 1px solid #ffe0cc;
  border-radius: 8rpx;
  padding: 10rpx 0;
  max-height: 100%;
}

.relate-checkbox-item {
  padding: 20rpx;
  margin-bottom: 8rpx;
  border-bottom: 1px solid #fff0e6;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 5;
}

.relate-checkbox-item:active {
  background-color: #fff7f0;
}

/* 添加目标复选框样式 */
.add-checkbox-group {
  display: flex;
  flex-direction: column;
  border: 1px solid #ffe0cc;
  border-radius: 8rpx;
  padding: 10rpx 0;
  max-height: 100%;
}

.add-checkbox-item {
  padding: 20rpx;
  margin-bottom: 8rpx;
  border-bottom: 1px solid #fff0e6;
  display: flex;
  align-items: center;
}

.add-checkbox-item:active {
  background-color: #fff7f0;
}

/* 可选择的日程项样式 */
.todo-item-selectable {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 1px solid #ffe0cc;
}

.todo-item-selectable.selected {
  background-color: rgba(255, 143, 102, 0.05);
  border-color: #ff8f66;
}

.checkbox-empty {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ffe0cc;
  border-radius: 50%;
}

.todo-list {
  margin-top: 10rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

/* 复选框样式 */
.checkbox-row {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 1px solid #ffe0cc;
}

.checkbox-label {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #7d5a50;
}

.related-todo-item {
  margin-bottom: 8rpx;
} 