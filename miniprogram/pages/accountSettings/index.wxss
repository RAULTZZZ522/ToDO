.page {
  background: #fffaf5;
  min-height: 100vh;
  padding: 20rpx;
}
.section {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 180, 140, 0.08);
  border: 1rpx solid #ffe0cc;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #ffe0cc;
}
.item:last-child {
  border-bottom: none;
}
.item-text {
  font-size: 30rpx;
  color: #7d5a50;
}
.arrow {
  font-size: 30rpx;
  color: #b5917a;
}
.logout {
  justify-content: center;
  color: #ff8f66;
} 