.page {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 20rpx;
}
.section {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.item:last-child {
  border-bottom: none;
}
.item-text {
  font-size: 30rpx;
  color: #333;
}
.arrow {
  font-size: 30rpx;
  color: #999;
}
.logout {
  justify-content: center;
  color: #ff4d4f;
} 