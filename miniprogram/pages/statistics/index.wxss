.statistics {
  padding: 40rpx 24rpx;
}
.stat-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.stat-title {
  font-size: 32rpx;
  color: #888;
  margin-bottom: 12rpx;
}
.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
} 