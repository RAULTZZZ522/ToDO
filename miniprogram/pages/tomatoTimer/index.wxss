.timer-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background: linear-gradient(to bottom, #a084e8, #8b60e4);
  padding: 40rpx;
  box-sizing: border-box;
  color: white;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

/* 任务选择器 */
.task-selector {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 60rpx;
}

.selector-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-name {
  font-size: 32rpx;
  font-weight: 500;
}

.arrow {
  font-size: 24rpx;
}

/* 计时器区域 */
.timer-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  margin-bottom: 60rpx;
}

/* 进度圆环 */
.progress-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.progress-canvas {
  width: 100%;
  height: 100%;
}

/* 白色圆圈 */
.timer-circle {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  width: 400rpx;
  height: 400rpx;
  background-color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #673ab7;
}

.timer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.count-area {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.timer-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.count-text {
  font-size: 32rpx;
  font-weight: 500;
}

.time-display {
  font-size: 80rpx;
  font-weight: bold;
}

/* 控制按钮区域 */
.control-area {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 40rpx;
}

.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.3);
  border: none;
  color: white;
  border-radius: 20rpx;
  width: 180rpx;
  height: 180rpx;
  margin: 0 20rpx;
}

.stop-btn {
  background-color: rgba(255, 107, 107, 0.8);
}

.pause-btn {
  background-color: rgba(255, 255, 255, 0.3);
}

.stop-icon, .pause-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

/* 完成按钮 */
.finish-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  border-radius: 50rpx;
  width: 400rpx;
  height: 80rpx;
  margin-bottom: 40rpx;
}

.check-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 底部选项区域 */
.bottom-options {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 20rpx;
}

.option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.option-text {
  font-size: 28rpx;
} 