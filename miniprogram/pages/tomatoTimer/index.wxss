.timer-page {
  height: 100vh;
  background-color: #fffaf5;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  color: #7d5a50;
}

.header {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  color: #7d5a50;
}

/* Task selector */
.task-selector {
  width: 90%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 180, 140, 0.08);
}

.selector-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.task-name {
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
  word-break: break-all;
  color: #7d5a50;
}

.task-category {
  font-size: 24rpx;
  background: #fff0e6;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  margin-right: 10rpx;
  color: #ff8f66;
}

.arrow {
  font-size: 24rpx;
  color: #b5917a;
}

/* Duration selector */
.duration-selector {
  width: 90%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(255, 180, 140, 0.08);
}

.duration-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #7d5a50;
}

.duration-options {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(255, 143, 102, 0.1);
  z-index: 100;
  display: none;
}

.duration-options.show {
  display: block;
}

.duration-option {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #7d5a50;
  border-bottom: 1rpx solid #ffe0cc;
}

.duration-option.active {
  color: #ff8f66;
  background-color: #fff0e6;
}

.duration-option:last-child {
  border-bottom: none;
}

/* Timer container */
.timer-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  margin: 30rpx 0 50rpx;
}

.progress-ring {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.progress-canvas {
  width: 100%;
  height: 100%;
}

.timer-circle {
  position: absolute;
  top: 5%;
  left: 5%;
  width: 90%;
  height: 90%;
  border-radius: 50%;
  background: white;
  box-shadow: 0 6rpx 16rpx rgba(255, 143, 102, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
  z-index: 10;
}

.timer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: relative;
}

.count-area {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.timer-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.count-text {
  font-size: 28rpx;
  color: #b5917a;
}

.tomato-counter {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  width: auto;
}

.tomato-icon {
  color: #ff8f66;
  font-size: 36rpx;
  margin-right: 10rpx;
}

.tomato-count {
  color: #7d5a50;
  font-size: 32rpx;
}

.time-display {
  font-size: 140rpx;
  font-weight: 700;
  color: #ff8f66;
  text-align: center;
  line-height: 1;
  letter-spacing: 2rpx;
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: 10rpx; /* Adjust for the tomato counter space */
}

/* Control area */
.control-area {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.btn {
  background: #fff0e6;
  border: none;
  color: #ff8f66;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  border-radius: 100rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 143, 102, 0.1);
}

.btn::after {
  border: none;
}

.stop-icon, .pause-icon {
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.finish-btn {
  background: #ff8f66;
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 80rpx;
  font-size: 32rpx;
  border-radius: 100rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 143, 102, 0.2);
}

.check-icon {
  margin-right: 10rpx;
  font-weight: bold;
}

.finish-btn::after {
  border: none;
}

/* Bottom options */
.bottom-options {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
  color: #ff8f66;
}

.option-text {
  font-size: 24rpx;
  color: #b5917a;
} 