.timer-page {
  height: 100vh;
  background: linear-gradient(135deg, #6f42c1, #a55eea, #6f42c1);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.header {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

/* Task selector */
.task-selector {
  width: 90%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.selector-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.task-name {
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
  word-break: break-all;
}

.task-category {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  margin-right: 10rpx;
}

.arrow {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Duration selector */
.duration-selector {
  width: 90%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.duration-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.duration-options {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  display: none;
}

.duration-options.show {
  display: block;
}

.duration-option {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.duration-option.active {
  color: #6f42c1;
  background-color: #f5f0ff;
}

.duration-option:last-child {
  border-bottom: none;
}

/* Timer container */
.timer-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  margin: 30rpx 0 50rpx;
}

.progress-ring {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.progress-canvas {
  width: 100%;
  height: 100%;
}

.timer-circle {
  position: absolute;
  top: 10%;
  left: 10%;
  width: 80%;
  height: 80%;
  border-radius: 50%;
  background: white;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.timer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.count-area {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.timer-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.count-text {
  font-size: 28rpx;
  color: #666;
}

.time-display {
  font-size: 80rpx;
  font-weight: 700;
  color: #333;
}

/* Control area */
.control-area {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.btn::after {
  border: none;
}

.stop-icon, .pause-icon {
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.finish-btn {
  background: white;
  color: #6f42c1;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 60rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-bottom: 60rpx;
}

.check-icon {
  margin-right: 10rpx;
  font-weight: bold;
}

.finish-btn::after {
  border: none;
}

/* Bottom options */
.bottom-options {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.option-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
} 